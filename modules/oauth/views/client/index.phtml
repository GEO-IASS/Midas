<div class="sectionHeader">My Authorizations</div>
<div class="myAuthorizationsContainer sectionContainer">
  <table class="myAuthorizationsTable">
    <thead><tr><th>Client</th><th>Grant Type</th><th>Actions</th></tr></thead>
    <tbody>
    <?php
    foreach($this->codes as $code)
      {
      echo '<tr><td>'.$code->getClient()->getName().'</td><td>Authorization Code</td>'.
           '<td><a class="deauthorizeCodeLink" element="'.$code->getKey().'">Deauthorize</a></td></tr>';
      }
    foreach($this->tokens as $token)
      {
      echo '<tr><td>'.$token->getClient()->getName().'</td><td>';
      switch($token->getType())
        {
        case MIDAS_OAUTH_TOKEN_TYPE_ACCESS:
          echo 'Access token';
          break;
        case MIDAS_OAUTH_TOKEN_TYPE_REFRESH:
          echo 'Refresh token';
          break;
        default:
          echo $token->getType();
          break;
        }
      echo '</td><td><a class="deauthorizeTokenLink" type="'.$token->getType().'" element="'.$token->getKey().'">'.
           'Deauthorize</a></td></tr>';
      }
    ?>
    </tbody>
  </table>
  <?php
  if(count($this->codes) + count($this->tokens) === 0)
    {
    echo '<div class="noClientsMessage">You have not authorized any clients.</div>';
    }
  ?>
</div>

