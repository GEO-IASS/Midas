    <?php
    foreach($this->clients as $client)
      {
      echo '<tr><td>'.$client->getName().
           '</td><td>'.$client->getKey().
           '</td><td>'.$client->getSecret().
           '</td><td><a class="deleteClientLink" element="'.$client->getKey().'">Delete</a></td></tr>';
      }
    ?>
    </tbody>
  </table>
  <?php
  if(count($this->clients) === 0)
    {
    echo '<div class="noClientsMessage">You have no clients at this time.</div>';
    }
  ?>
