{
    "name": "midas-platform/midas-server",
    "description": "Server component of the Midas Platform",
    "type": "project",
    "homepage": "http://www.midasplatform.org",
    "license": "Apache-2.0",
    "support": {
        "email": "kitware@kitware.com",
        "issues": "https://github.com/midasplatform/Midas/issues",
        "source": "https://github.com/midasplatform/Midas"
    },
    "require": {
        "php": ">=5.3.23",
        "ext-gd": "*",
        "ext-json": "*",
        "erusev/parsedown-extra": "~0.7",
        "francodacosta/phmagick": "0.4.*@dev",
        "intervention/image": "~2.1",
        "ircmaxell/random-lib": "~1.1",
        "leafo/scssphp": "~0.1",
        "maennchen/zipstream-php": "~0.3",
        "moontoast/math": "~1.1",
        "reprovinci/solr-php-client": "~1.0",
        "rhumsaa/uuid": "~2.8",
        "sendgrid/sendgrid": "~2.2",
        "zendframework/zendframework1": "~1.12"
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-xdebug": "*",
        "fabpot/php-cs-fixer": "~1.5",
        "jokkedk/zfdebug": "~1.6",
        "phpcheckstyle/phpcheckstyle": "V0.14.1",
        "phpunit/dbunit": "1.3.*@dev",
        "phpunit/phpcov": "~2.0",
        "phpunit/phpunit": "~4.5",
        "satooshi/php-coveralls": "~0.6",
        "sensiolabs/security-checker": "~2.0",
        "symfony/console": "~2.6"
    },
    "suggest": {
        "ext-fileinfo": "*",
        "ext-imagick": "*",
        "ext-ldap": "*",
        "ext-memcached": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_pgsql": "*",
        "ext-pdo_sqlite": "*",
        "ext-openssl": "*",
        "ext-zip": "*"
    },
    "autoload": {
        "psr-0": {
            "Midas_": "library",
            "REST_": "library"
        }
    },
    "include-path": [
        "core/dao",
        "library"
    ],
    "archive": {
        "exclude": [
            "/core/configs/*.local.*",
            "/data/**",
            "/log/**",
            "/tmp/**"
        ]
    }
}
